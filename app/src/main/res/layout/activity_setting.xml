<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phuctruong.ezc.View.SettingActivity">

    <include
        android:id="@+id/appbar_setting"
        layout="@layout/appbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar_setting"
        android:background="@color/backgroundLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/pad_10dp">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_1dp"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_3dp"
                android:background="@color/side_menu_divider" />

            <TextView
                android:id="@+id/lbl1"
                style="@style/lbl_setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account" />

            <TextView
                style="@style/lbl_setting1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anna Mccoy"
                android:textSize="@dimen/txt_12sp"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:background="@color/side_menu_divider" />

            <TextView
                android:id="@+id/lbl2"
                style="@style/lbl_setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_pos" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:background="@color/side_menu_divider" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    style="@style/lbl_setting2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="Push notification" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/mySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:background="@color/side_menu_divider" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    style="@style/lbl_setting2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Email notification" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"  />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:background="@color/side_menu_divider" />

            <TextView
                style="@style/lbl_setting1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_20dp"
                android:text="@string/help" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_1dp"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_3dp"
                android:background="@color/side_menu_divider" />

            <TextView
                android:id="@+id/lbl3"
                style="@style/lbl_setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:background="@color/side_menu_divider" />

            <TextView
                android:id="@+id/lbl4"
                style="@style/lbl_setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:background="@color/side_menu_divider" />

            <TextView
                android:id="@+id/lbl5"
                style="@style/lbl_setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tnc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:background="@color/side_menu_divider" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>