<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ingredient"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"></RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/accentColor">

            <TextView
                android:id="@+id/item_ingredient_name"
                android:layout_marginLeft="8dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/accentColor"
                android:gravity="left|center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:text="AaBbCcDd"
                android:textColor="#000"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_ingredient_unit"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@color/accentColor"
                android:gravity="right|center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:text="/gram"
                android:textColor="#000"
                android:textSize="@dimen/abc_text_size_medium_material" />


            <TextView
                android:id="@+id/item_ingredient_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/item_ingredient_unit"
                android:layout_weight="1"
                android:background="@color/accentColor"
                android:gravity="right|center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:text="100,000VND"
                android:textColor="#000"
                android:textSize="@dimen/abc_text_size_medium_material" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"></RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>