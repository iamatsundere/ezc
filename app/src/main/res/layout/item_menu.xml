<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_menu_layout"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:onClick="onMenuItemClick"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight=".1"></RelativeLayout>

    <LinearLayout
        android:id="@+id/item_menu_parent"
        android:layout_width="0dip"
        android:layout_height="80dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight=".8"
        android:background="@color/accentColor"
        android:onClick="onMenuItemClick"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".45">

            <TextView
                android:id="@+id/menu_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:onClick="onMenuItemClick"
                android:text="MENU"
                android:layout_weight="1"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

            <TextView
                android:id="@+id/menu_date_create"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:onClick="onMenuItemClick"
                android:text="18/01/2015"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/abc_text_size_medium_material" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menu_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:onClick="onMenuItemClick"
                android:text="120,000VND"
                android:textColor="@color/textMainColor"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:id="@+id/menu_qty_people_content"
                android:layout_width="24dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:onClick="onMenuItemClick"
                android:text="12"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_qty_people_icon"
                android:layout_width="24dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_toLeftOf="@id/menu_qty_people_content"
                android:layout_weight="1"
                android:onClick="onMenuItemClick"
                android:src="@drawable/icon_people" />

            <TextView
                android:id="@+id/menu_qty_recipe_content"
                android:layout_width="24dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_toLeftOf="@id/menu_qty_people_icon"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:onClick="onMenuItemClick"
                android:text="12"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_qty_recipe_icon"
                android:layout_width="24dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_toLeftOf="@id/menu_qty_recipe_content"
                android:layout_weight="1"
                android:onClick="onMenuItemClick"
                android:src="@drawable/icon_dish" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight=".1">

    </RelativeLayout>
</LinearLayout>