<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight=".1"></RelativeLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="80dp"
        android:layout_weight=".8"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/accentColor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8px"
            android:layout_weight=".45"
            android:gravity="center_vertical"
            android:text="MENU"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8px"
            android:layout_weight=".6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menu_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="120,000VND"
                android:textColor="@color/textMainColor"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:id="@+id/menu_qty_people_content"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="12"
                android:textColor="@color/primaryColor"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_qty_people_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_toLeftOf="@id/menu_qty_people_content"
                android:layout_weight="1"
                android:src="@drawable/icon_people"/>

            <TextView
                android:id="@+id/menu_qty_recipe_content"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_toLeftOf="@id/menu_qty_people_icon"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="12"
                android:textColor="@color/primaryColor"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_qty_recipe_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_toLeftOf="@id/menu_qty_recipe_content"
                android:layout_weight="1"
                android:src="@drawable/icon_dish" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight=".1">

    </RelativeLayout>
</LinearLayout>