<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"></RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/accentColor"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_recipe_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.7"
                android:orientation="horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/img">

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.15"></RelativeLayout>

                <ImageView
                    android:id="@+id/item_category_icon"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.7"></ImageView>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.15"></RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/item_category_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:text="AaBbCcDd"
                android:textColor="#000"
                android:textSize="@dimen/abc_text_size_headline_material" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"></RelativeLayout>

    </LinearLayout>
</LinearLayout>