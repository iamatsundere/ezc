<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phuctruong.ezc" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.RecipeActivity"
            android:label="@string/title_activity_recipe" >
        </activity>
        <activity
            android:name=".View.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme.Base">
        </activity>
        <activity
            android:name=".View.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".View.PriceActivity"
            android:label="@string/title_activity_price" >
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".View.CategoryActivity"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name=".View.MenuDetailActivity"
            android:label="@string/title_activity_menu_detail" >
        </activity>
        <activity
            android:name=".View.RecipeDetailActivity"
            android:label="@string/title_activity_recipe_detail" >
        </activity>
    </application>

</manifest>
